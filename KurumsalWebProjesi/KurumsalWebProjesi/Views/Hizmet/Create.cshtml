
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
<h2>Hizmet Ekle</h2>
<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required"></span> </label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="baslik"  type="text" required />
            </div>
        </div>
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2">Açıklama <span class="required"></span> </label>
            <div class="col-lg-10">
                <textarea name="Aciklama" required class="ckeditor"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2">Resim URL <span class="required"></span> </label>
            <div class="col-lg-10">
                <input type="file" class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" required />
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <br />
                <button class="btn btn-default" type="button"><a href="/Hizmet/Index">İptal</a></button>
            </div>
        </div>



    </form>

</div>










