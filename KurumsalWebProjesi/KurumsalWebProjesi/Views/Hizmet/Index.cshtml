@model IEnumerable<KurumsalWebProjesi.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-danger" href="/Hizmet/Create">Hİzmet Ekle</a>
<table class="table table-striped"> 
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>ResimURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HizmetId</td>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td> <img src="~/@item.ResimURL"  width="300" height="200" alt="Alternate Text" /></td>
                <td><a href="/Hizmet/Edit/@item.HizmetId">Düzenle</a> | <a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>
            </tr>
        }
    </tbody>
</table>