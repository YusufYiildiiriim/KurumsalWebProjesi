@model KurumsalWebProjesi.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Düzenle</h2>

<div class="form-horizontal">

    @*<form action="/Blog/Edit" method="post" enctype="multipart/form-data" >*@
    @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <h4>Iletisim</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2"> Başlık<span class="required"></span></label>
            <div class="col-md-10">
                <input class="form-control" id="Baslik" type="text" name="Baslik" required value="@Model.Baslik"/>
            </div>
        </div>
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2"> Kategori<span class="required"></span></label>
            <div class="col-md-10">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
               
            </div>
        </div>
        <div class="form-group">
            <label for="cname" class="control-label col-lg-2"> içerik <span class="required"></span></label>
            <div class="col-md-10">
                <textarea class="form-control" name="Icerik">@Model.Icerik </textarea>
            </div>
            <div class="form-group">
                <label for="cname" class="control-label col-lg-2"> Önceki Resim<span class="required"></span></label>
                <div class="col-md-10">
                    <img src="~/@Model.ResimURL" alt="Alternate Text" />
                </div>
            </div>
            <div class="form-group">
                <label for="cname" class="control-label col-lg-2"> Resim<span class="required"></span></label>
                <div class="col-md-10">
                    <input class="form-control" type="file" name="ResimURL"  accept=".jgp,.png,.jpeg" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-lg-10">
                    <button class="btn btn-primary">Güncelle</button>
                    <button class="btn btn-light"><a href="/Blog/Index">İptal</a></button>
                </div>
            </div>

        </div>
    }


    @*</form>*@

</div>

