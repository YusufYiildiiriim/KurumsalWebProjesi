<body class="index-page">
    <header id="header" class="header d-flex align-items-center fixed-top" style="background-color:#274254">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a href="/Anasayfa" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1 class="sitename">@*Kurumsal Web*@ <img src="~/@ViewBag.Kimlik.LogoURL" alt="Alternate Text" /> @ViewBag.Kimlik.Unvan </h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="/Anasayfa" class="active">@(HttpContext.GetGlobalResourceObject("Labels", "Home_navmenu_AnaSayfa"))</a></li>
                    <li><a href="/HakkimizdaDetay">@(HttpContext.GetGlobalResourceObject("Labels", "Hakkimizda_Hakkimizda"))</a></li>
                    <li><a href="/BlogPost">@(HttpContext.GetGlobalResourceObject("Labels", "Home_navmenu_Blog"))</a></li>
                    <li><a href="/Iletisim">@(HttpContext.GetGlobalResourceObject("Labels", "Home_navmenu_Iletisim"))</a></li>
                    <li><a href="/Hizmetlerimiz">@(HttpContext.GetGlobalResourceObject("Labels", "Home_navmenu_Hizmetler"))</a></li>
                    <li>
                        @{
                            string currentLang = Request.QueryString["lang"]
                                                 ?? Request.Cookies["lang"]?.Value
                                                 ?? "tr";
                        }

                        <form method="get" action="@Url.Action("Index", "Home")">
                            <select name="lang" onchange="this.form.submit()">
                                <option value="tr" @(currentLang == "tr" ? "selected" : "")>Türkçe</option>
                                <option value="en" @(currentLang == "en" ? "selected" : "")>English</option>
                            </select>
                        </form>

                    </li>
                @*<li>
                    <div id="google_translate_element"></div>
                    <script type="text/javascript">
                        function googleTranslateElementInit() {
                            new google.translate.TranslateElement({
                                pageLanguage: 'tr',
                                includedLanguages: 'en,tr,de',
                                layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
                                autoDisplay: false
                            }, 'google_translate_element');
                        }
                    </script>
                    <script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                </li>*@

                </ul>
                
                
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    @RenderSection("sliderArea", required: false)
    @RenderBody();

    @{
        Html.RenderAction("FooterPartial", "Home");
    }



    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="/Content/SiteLayout/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/php-email-form/validate.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/aos/aos.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/Content/SiteLayout/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <!-- Main JS File -->
    <script src="/Content/SiteLayout/assets/js/main.js"></script>

</body>

</html>