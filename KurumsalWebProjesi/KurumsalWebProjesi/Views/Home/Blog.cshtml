@model IEnumerable<KurumsalWebProjesi.Models.Model.Blog>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container position-relative">
        <h1>Blog</h1>
        <p>Blog Yazılarımıza Alt Sekmeden Ulaşabilirsiniz.</p>
        <nav class="breadcrumbs">
            <ol>
                <li><a href="index.html">ana Menü</a></li>
                <li class="current">Blog</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<!-- Blog Posts Section -->
<section id="blog-posts" class="blog-posts section">

    <div class="container">
        <div class="row gy-4">

            <div class="col-lg-4">
                @foreach (var item in Model)
                {
                    <article>

                        <div class="post-img">
                            <img src="assets/img/blog/blog-1.jpg" alt="" class="img-fluid">
                        </div>

                        <p class="post-category">@item.Icerik</p>

                        <h2 class="title">
                            <a href="blog-details.html">@item.Baslik</a>
                        </h2>

                        <div class="d-flex align-items-center">
                            @*<img src="~/@item.ResimURL" alt="" class="img-fluid post-author-img flex-shrink-0">*@
                        </div>

                    </article>
                }

            </div><!-- End post list item -->


        </div>
    </div>

</section><!-- /Blog Posts Section -->
