                {
                    <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-item item-cyan position-relative">
                            <div class="icon">
                                @*<i class="bi bi-activity"></i>*@
                                <img src="~/@item.ResimURL" width="50" height="50" alt="Alternate Text" title="@item.Baslik" />
                            </div>
                            <a href="~/Iletisim" class="stretched-link">
                                <h3>@item.Baslik</h3>
                            </a>
                            <p>@item.Aciklama</p>
                            <br />
                            <br />
                            <h6>Hizmet hakkında bilgi al!</h6>
                        </div>
                    </div><!-- End Service Item -->
                }


            </div>

        </div>

    </section><!-- /Featured Services Section -->
   
