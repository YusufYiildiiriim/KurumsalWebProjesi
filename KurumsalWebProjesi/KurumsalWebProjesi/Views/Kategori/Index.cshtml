@model IEnumerable<KurumsalWebProjesi.Models.Model.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.txtsinav)
        </th>
        <th>
            Kategori Dili
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.txtsinav)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Languages.Language)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriId }) |
            @Html.ActionLink("Detaylar", "Details", new { id = item.KategoriId }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.KategoriId })
        </td>
    </tr>
}

</table>
